{
    "manifest_version": 3,
    "name": "Resume Tailor AI",
    "version": "1.0.0",
    "description": "Automatically tailor your resume to job descriptions using AI",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Resume Tailor AI"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.linkedin.com/*",
          "*://*.indeed.com/*",
          "*://*.glassdoor.com/*",
          "*://*.monster.com/*",
          "*://*.ziprecruiter.com/*",
          "*://*.workday.com/*",
          "*://*.lever.co/*",
          "*://*.greenhouse.io/*",
          "*://*.ashbyhq.com/*",
          "*://*.boards.greenhouse.io/*",
          "*://*/*"
        ],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["resumeTemplate.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }