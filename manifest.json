{
    "manifest_version": 3,
    "name": "Resume Tailor AI",
    "version": "1.1.0",
    "description": "Automatically tailor your resume to job descriptions using AI with 87% token savings",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Resume Tailor AI"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*/*",
          "http://*/*"
        ],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_end",
        "all_frames": false
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["resumeTemplate.js", "efficientOptimizer.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }